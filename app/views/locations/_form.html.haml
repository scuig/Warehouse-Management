= form_for(@location) do |f|
  - if @location.errors.any?
    #error_explanation
      %h2
        = pluralize(@location.errors.count, "error")
        prohibited this location from being saved:
      %ul
        - @location.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :location_name
    %br/
    = f.text_field :location_name
  .field
    = f.label :municipio
    %br/
    = f.text_field :municipio
  .field
    = f.label :state
    %br/
    = f.text_field :state
  .actions
    = f.submit
