%div
  #wrapper
    #login.animate.form
      %section.login_content
        %h1 Crear cuenta
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|

          %div
            = f.email_field :email, autofocus: true, :class => "form-control", :placeholder =>"Email",  :required => ""
          %div
            = f.password_field :password, autofocus: true, :class => "form-control", :placeholder =>"Password",  :required => "", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
          %div
            = f.password_field :password_confirmation, autofocus: true, :class => "form-control", :placeholder =>"Repite tu Password"
          %div
            = f.submit "Sign up",:class => "btn btn-default submit"
          .clearfix
          .separator
            .clearfix
            %br/
            %div
              %h1
                %i.fa.fa-paw{:style => "font-size: 26px;"}
                Claro Solutions
              %p Â©2016 All Rights Reserved.
              = render "devise/shared/links"

        / form
      / content
