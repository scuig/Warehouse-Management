%div
  #wrapper
    #login.animate.form
      %section.login_content
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          %h1 Iniciar Sesión
          %div
            = f.email_field :email, autofocus: true, :class => "form-control", :placeholder =>"Username",  :required => ""
          %div
            = f.password_field :password, autofocus: true, :class => "form-control", :placeholder =>"Password",  :required => ""
          - if devise_mapping.rememberable?
            .checkbox-inline
              = f.check_box :remember_me
              = f.label :remember_me
          %div
            = f.submit "Log in", :class => "btn btn-default submit"
            %a.reset_pass{:href => "#"} Lost your password?
          .clearfix
          .separator
            .clearfix
            %br/
            %div
              %h1
                %i.fa.fa-magic{:style => "font-size: 26px;"}
                Claro Solutions
              %p ©2016 All Rights Reserved.
        = render "devise/shared/links"
        / form
      / content
