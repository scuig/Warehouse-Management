= form_for(@order) do |f|
  - if @order.errors.any?
    #error_explanation
      %h2
        = pluralize(@order.errors.count, "error")
        prohibited this order from being saved:
      %ul
        - @order.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :account
    %br/
    = f.number_field :account
  .field
    = f.label :work_order
    %br/
    = f.text_field :work_order
  .field
    = f.label :check_in
    %br/
    = f.date_select :check_in
  .field
    = f.label :location
    %br/
    = f.collection_select :location, Location.order(:location_name), :id, :location_name, include_blank: false
  .actions
    = f.submit
