= form_for(@order_kind) do |f|
  - if @order_kind.errors.any?
    #error_explanation
      %h2
        = pluralize(@order_kind.errors.count, "error")
        prohibited this order_kind from being saved:
      %ul
        - @order_kind.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :order_kind_name
    %br/
    = f.text_field :order_kind_name
  .actions
    = f.submit
